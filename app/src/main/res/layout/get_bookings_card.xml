<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/get_bookings_card"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:backgroundTint="@color/logo_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/booking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta_stencil"
                android:paddingRight="5dp"
                android:text="Shelar Yamaha"
                android:textColor="@color/logo_dark_blue"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/booking_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Yamaha R15 V3"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Details: "
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bd"
                android:layout_marginStart="10dp"
                android:text="Brake Pads Change \nCoolant Change \nChain Lube "
                android:textAllCaps="false"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bookingID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="5dp"
                android:text="Booking ID: 405149684"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/booked_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Booked by: Samuel Patole"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/booked_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Booked on: 30-01-2022"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/call_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="call service station"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>