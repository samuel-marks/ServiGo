<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Success"
    android:id="@+id/success"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp">



            <ImageButton
                android:id="@+id/btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:alpha="0.8"
                android:background="#00000000"
                android:elevation="2dp"
                android:onClick="gotoHome"
                android:src="@drawable/back_icon"
                tools:ignore="OnClick,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/allerta_stencil"
                android:text="ServiGo"
                android:textColor="@color/logo_dark_blue"
                android:textSize="28sp"
                android:textStyle="italic"  />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/servigologo"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_below="@id/top_bar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/allerta_stencil"
                android:gravity="center_horizontal"
                android:text="Booking successful"
                android:textColor="@color/logo_dark_blue"
                android:textSize="20dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/anim_vector" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:gravity="center_horizontal"
                android:text="Please spare a moment for us\nYour feedback matters!"
                android:textColor="@color/logo_medium_blue"
                android:textSize="20sp"
                android:textStyle="italic" />

            <RatingBar
                android:id="@+id/rbstars"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFC107"
                android:numStars="5" />


            <EditText
                android:id="@+id/Feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Help us improve with your feedback"
                android:inputType="textMultiLine"
                android:marqueeRepeatLimit="marquee_forever" />

            <Button
                android:id="@+id/sendFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Send Feedback" />

            <TextView
                android:id="@+id/ty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:fontFamily="@font/allerta_stencil"
                android:gravity="center_horizontal"
                android:text="Thank you very much"
                android:textColor="@color/logo_medium_blue"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>