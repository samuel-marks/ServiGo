<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="15dp"
    app:cardElevation="10dp"
    android:id="@+id/viewAll_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/viewAll_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/g_a"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/viewAll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jeep Service Station"
            android:fontFamily="@font/allerta_stencil"
            android:textStyle="italic"
            android:textColor="@color/logo_dark_blue"
            android:textSize="20sp"
            android:layout_marginVertical="5dp"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:id="@+id/viewAll_rating"/>


        <TextView
            android:id="@+id/viewAll_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/lorem"
            android:layout_marginVertical="5dp"/>


            <TextView
                android:id="@+id/viewAll_is_suitable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/logo_medium_blue"
                android:text="*This service station is suitable for your selected vehicle"
                android:layout_gravity="bottom"
                android:visibility="visible"/>

    </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>