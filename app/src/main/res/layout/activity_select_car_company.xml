<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCarCompany"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:alpha="0.8"
                android:background="#00000000"
                android:elevation="2dp"
                android:onClick="gotoHome"
                android:src="@drawable/back_icon"
                tools:ignore="OnClick,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/allerta_stencil"
                android:text="ServiGo"
                android:textColor="@color/logo_dark_blue"
                android:textSize="28sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/servigologo" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:text="Add a new Car "
            android:textAllCaps="true"
            android:textColor="@color/logo_dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Choose Vehicle Company"
            android:textColor="@color/logo_dark_blue"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnervehiclecompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Choose Vehicle Model"
            android:textColor="@color/logo_dark_blue"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnervehiclemodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Add vehicle"/>

</RelativeLayout><?xml version="1.0" encoding="utf-8"?>