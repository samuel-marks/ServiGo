<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/menu_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:alpha="0.8"
                android:background="#00000000"
                android:elevation="2dp"
                android:onClick="gotoHome"
                android:src="@drawable/back_icon"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/allerta_stencil"
                android:text="ServiGo"
                android:textColor="@color/logo_dark_blue"
                android:textSize="28sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/servigologo" />


        </RelativeLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="20dp"
            android:background="@color/logo_light_blue">

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/logo1" />

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/logo1"
                android:includeFontPadding="false"
                android:text="Welcome,"
                android:textColor="@color/logo_dark_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/logo1"
                android:includeFontPadding="false"
                android:text="Naruto Uzumaki"
                android:textStyle="bold"
                android:textColor="@color/logo_dark_blue"
                android:textSize="24sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-80dp">


            <com.google.android.material.card.MaterialCardView

                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/logo_light_blue"
                app:cardElevation="10dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                         />

                    <TextView
                        android:id="@+id/payment_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$123"
                        android:includeFontPadding="false"
                        android:textSize="20sp"
                        android:fontFamily="@font/allerta_stencil"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/payment_label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:includeFontPadding="false"
                        android:textSize="20sp"
                        android:layout_below="@id/payment_label"
                        android:layout_centerInParent="true"/>






                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView

                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/logo_light_blue"
                app:cardElevation="10dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/booking_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:includeFontPadding="false"
                        android:textSize="20sp"
                        android:fontFamily="@font/allerta_stencil"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/booking_label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking"
                        android:includeFontPadding="false"
                        android:textSize="20sp"
                        android:layout_below="@id/booking_label"
                        android:layout_centerInParent="true"/>






                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                app:hintTextColor="@color/logo_medium_blue"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Naruto Uzumaki"
                    android:textColor="@color/logo_dark_blue"
                    android:background="@color/transparent"
                    android:id="@+id/user_name">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:hintTextColor="@color/logo_medium_blue"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vedantisaraf2000@gmail.com"
                    android:textColor="@color/logo_dark_blue"
                    android:background="@color/transparent"
                    android:id="@+id/user_email">

                </com.google.android.material.textfield.TextInputEditText>




            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No"
                app:hintTextColor="@color/logo_medium_blue"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8888888777"
                    android:textColor="@color/logo_dark_blue"
                    android:background="@color/transparent"
                    android:id="@+id/user_contact">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                app:hintTextColor="@color/logo_medium_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pune"
                    android:textColor="@color/logo_dark_blue"
                    android:background="@color/transparent"
                    android:id="@+id/user_city">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:alpha="0.5"
                android:layout_marginVertical="10dp"
                android:text="You can change your city anytime from the Home screen"
                android:textColor="@color/logo_red"/>

            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
                android:layout_marginTop="10dp"
               android:textSize="18sp"
               android:text="My vehicles: "
               android:textColor="@color/logo_dark_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/logo_dark_blue"
                android:text="1: Yamaha R15 V3 \n2: Maruti Suzuki Wagon R"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:alpha="0.5"
                android:layout_marginVertical="10dp"
                android:text="You can add/ remove vehicles from the main menu"
                android:textColor="@color/logo_red"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta_stencil"
                android:text="Update"
                android:textStyle="bold"
                android:layout_marginVertical="15dp"
                 />




        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>